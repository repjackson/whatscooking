template(name='services')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.inline.header 
                    +icolor name='wrench'
                    |services
                if currentUser
                    .ui.icon.circular.basic.button.add_service
                        i.plus.icon
                .spacer
                .ui.small.inline.header filter
                +cloud filter='service'
            .twelve.wide.column
                .ui.icon.input
                    if query
                        i.remove.icon
                    else
                        i.search.icon
                    input.service_search(type='text' placeholder='search...')
                .ui.button.toggle_unvoted(class=unvoted_button_class)
                    |unvoted
                .ui.button.toggle_upvoted(class=upvoted_button_class)
                    i.thumbs.up.outline.icon
                    |upvoted
                .ui.button.toggle_downvoted(class=downvoted_button_class)
                    i.thumbs.down.outline.icon
                    |downvoted
                .spacer
                .scrolling
                    .ui.stackable.centered.four.cards
                        each services
                            +service_card



template(name='service_card')
    .ui.card
        if image_id
            a(href="/service/#{_id}/view")
                img.ui.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
        .content
            a.ui.header(href="/service/#{_id}/view") #{title}
            div created {{from_now _timestamp}} by #{_author_username}
            each tags
                .ui.basic.circular.label #{this}
            //- .ui.large.basic.label 
            //-     |#{points} points
        .content
            +voting

            
            
            
            

template(name='service_view')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row
                .four.wide.center.aligned.column
                    a.ui.basic.circular.compact.button(href="/services")
                        i.left.chevron.icon
                        +icolor name='services' classes='ui inline mini image'
                        |services
                .eight.wide.center.aligned.column
                    .ui.center.aligned.header #{title}
                .four.wide.center.aligned.column
                    a.ui.basic.circular.button(href="/service/#{_id}/edit")
                        i.blue.pencil.icon
                        |edit        
            .five.wide.column
                +image_view key='image_id' direct=true
                +array_view key='tags' direct=true
            .six.wide.column
                img.ui.large.rounded.image(src="{{c.url image width=500 height=500 gravity='face' crop='fill'}}")
                +textarea_view key='description' direct=true
                .spacer
                +comments
            .five.wide.column
                with current_doc
                    +voting_full
                    .ui.header similar services
                    .ui.header alerts



template(name='service_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                .eight.wide.column
                    .ui.header edit '#{title}' service
                .four.wide.column
                    a.ui.large.circular.basic.button(href="/service/#{_id}/view")
                        i.checkmark.green.icon
                        |save        
            .five.wide.column
                .ui.header #{title}
                +text_edit key='title' direct=true
                +array_edit key='tags' direct=true
                +image_edit key='image_id' direct=true
            .six.wide.column
                img.ui.large.image(src="{{c.url image width=800 height=500 gravity='face' crop='fill'}}")
                +html_edit key='description' direct=true
