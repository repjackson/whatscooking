template(name='user_profile')
    with current_user
        .ui.center.aligned.header 
            i.info.icon
            | profile
        .ui.stackable.grid
            .three.column.row
                .column
                    |!{bio}
                .column
                    each allergens 
                        .ui.label #{this}

template(name='user_tribes')
    .ui.center.aligned.header 
